{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "make (sjasmplus)",
      "type": "shell",
      "command": "./bin/sjasmplus", // Please add the full path to sjasmplus
      "args": [
          "--sld=z80-sample-program.sld",
          "--fullpath",
          "main.asm"
      ],
      "problemMatcher": {
          "owner": "sjasmplus",
          "fileLocation": "autoDetect",
          "pattern": {
              "regexp": "^(.*)\\((\\d+)\\):\\s+(warning|error):\\s+(.*)$",
              "file": 1,
              "line": 2,
              "severity": 3,
              "message": 4
          }
      },
      "group": {
          "kind": "build",
          "isDefault": true
      }
  },
]
}
